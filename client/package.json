{
  "name": "Memorains Note",
  "private": true,
  "version": "0.8.59",
  "type": "module",
  "main": "./electron/out/main.js",
  "description": "Memorains is an note software integrating rich text editing canvas drawing.",
  "scripts": {
    "dev": "vite --host",
    "postinstall": "mkdir -p ./public/excalidraw_assets && rm -rf ./public/excalidraw_assets/fonts && cp -r ./node_modules/@excalidraw/excalidraw/dist/dev/fonts ./public/excalidraw_assets/",
    "build": "tsc -b && vite build && node ./ci/sw-version.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "desktop:build:html": "tsc -b && VITE_BUILD_ELECTRON=true npm run build",
    "desktop:build:ts": " rm -rf ./electron/out && cd ./electron/ && tsc",
    "desktop:build:web": " npm run desktop:build:ts && npm run desktop:build:html",
    "desktop:dev": "npm run desktop:build:ts && electron . --no-sandbox",
    "desktop:start": "electron-forge start",
    "desktop:test": "echo \"Error: no test specified\" && exit 1",
    "desktop:package": "npm run desktop:build:web && electron-forge package",
    "desktop:package:q": "electron-forge package",
    "desktop:make": "npm run desktop:build:web && electron-forge make",
    "desktop:make:q": "electron-forge make",
    "desktop:make:win": "npm run desktop:build:web && electron-forge make --platform win32"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@enzedonline/quill-blot-formatter2": "^3.0.0",
    "@excalidraw/excalidraw": "^0.18.0",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.6",
    "electron-squirrel-startup": "^1.0.1",
    "highlight.js": "^11.10.0",
    "js-base64": "^3.7.5",
    "lodash.throttle": "^4.1.1",
    "lru-cache": "^10.0.1",
    "moment": "^2.29.4",
    "quill": "^2.0.2",
    "quill-better-table": "^1.2.10",
    "quill-cursors": "^4.0.2",
    "quill-markdown-shortcuts": "^0.0.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.15.0",
    "string-format": "^2.0.0",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0",
    "y-quill": "^1.0.0",
    "y-utility": "^0.1.4",
    "yjs": "^13.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.17.0",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^22.10.2",
    "@types/quill": "^2.0.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/string-format": "^2.0.3",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^33.2.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^5.4.10",
    "vite-plugin-node-polyfills": "^0.22.0"
  }
}
